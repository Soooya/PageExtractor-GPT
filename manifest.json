{
    "name": "PageExtractor-GPT",
    "version": "0.0.1",
    "description": "A page content extractor powered by GPT",
    "manifest_version": 3,
    "icons": {
        "16": "assets/images/logo16.png",
        "32": "assets/images/logo32.png",
        "48": "assets/images/logo48.png",
        "128": "assets/images/logo128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "browser_style": true
    },
    "permissions": [
        "storage",
        "alarms",
        "notifications",
         "webRequest",
        "tabs"
    ],
    "host_permissions":[
        "<all_urls>"
    ],
    "options_ui": {
        "page": "options.html",
        "browser_style": false
    },
    "background": {
        "scripts": ["assets/js/background.js"]
    }
}